# --- App Metadata ---
APP_TITLE="Coeus AI"
APP_DESCRIPTION="Voice-Based RAG Assistant for PDF Analysis"
APP_VERSION="1.0.0"
DEBUG=True
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# --- Groq Configuration (LangChain) ---
# Get your key at https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
